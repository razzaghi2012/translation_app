<% if signed_in? %>

  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">What's up?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>

<% else %>

<h2>Welcome to a Twitter-like Application. Sign Up </h2>

<h2>
  <div class="btn-group"> 
  <button class="btn-large"><%= link_to "Sign up now!", signup_path, :class => "signup_button round" %></button>
</div>
</h2>
<% end %>